// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bookmark {
  id          String   @id @default(cuid())
  url         String
  title       String
  description String?
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tags        Tag[]
  categories  Category[]

  @@index([createdAt])
}

model Tag {
  id        String     @id @default(cuid())
  name      String     @unique
  bookmarks Bookmark[]

  @@index([name])
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  bookmarks Bookmark[]

  @@index([name])
}
